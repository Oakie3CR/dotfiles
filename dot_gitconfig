  name = Christian Rigdon
  email = christian.rigdon@octanner.com
  signingkey = /Users/christian.rigdon/.ssh/id_ed25519.pub

[tag]
  sort = version:refname
#[commit]
  #template = /Users/christian.rigdon/.stCommitMsg
[help]
  autocorrect = 10
[init]
	defaultBranch = main
[gpg "ssh"]
	allowedSignersFile = /Users/christian.rigdon/.ssh/allowed_signers
